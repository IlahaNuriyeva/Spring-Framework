<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd" >

    <bean id="student" class="az.developia.spring.Student" scope="singleton">

        <constructor-arg name="id" value="2"/>
        <constructor-arg name="firstname" value="Ilaha"/>
        <constructor-arg name="lastname" value="Nuriyeva"/>
        <constructor-arg ref="teacher"/>
    </bean>

    <bean id="teacher" class="az.developia.spring.Teacher">
        <constructor-arg name="id" value="4"/>
        <constructor-arg name="name" value="Nijat Asgerzade"/>
        <constructor-arg name="lesson" value="Java EE"/>

    </bean>

</beans>
